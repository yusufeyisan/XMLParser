@model XMLOkuyucu.Models.Kullanici

@{
    ViewBag.Title = "Kaydol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-lg-12 col-md-12 col-sm-11 col-xs-12">
        <a href="/Home/Index"><input class="pull-right btn btn-xs btn-info" type="button" value="Geri Dön" /></a>
        <br />
        <hr />
    </div>

    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <table class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
                <tr>
                    <td><label>Kullanıcı Adı:</label></td>
                    <td>
                        @Html.EditorFor(model => model.KullaniciAdi, new { htmlAttributes = new { @class = "form-control col-lg-4 col-lg-offset-1 col-md-7  col-sm-6 col-sm-offset-1 col-xs-12", @placeholder = "Kullanıcı adı giriniz" } })
                        @Html.ValidationMessageFor(model => model.KullaniciAdi, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td colspan=2> <hr /></td>
                </tr>
                <tr>
                    <td><label> Kullanıcı Parolası:</label></td>
                    <td>
                        @Html.EditorFor(model => model.KullaniciParola, new { htmlAttributes = new { @class = "form-control col-lg-4 col-lg-offset-1 col-md-7  col-sm-6 col-sm-offset-1 col-xs-12", @type = "Password", @placeholder = "Parola Oluşturun" } })
                        @Html.ValidationMessageFor(model => model.KullaniciParola, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td colspan="2"><hr /></td>
                </tr>
                <tr>
                    <td colspan="2"><input class="btn btn-success col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2" type="submit" name="BtnKaydet" value="Kaydet" /></td>
                </tr>
            </table>

        </div>
    }
    <br />
    <hr />
    
</div>


